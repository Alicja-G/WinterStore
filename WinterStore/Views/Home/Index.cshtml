@{
    ViewBag.Title = "Home Page";
}

<div class="container" id="index">
    
    <div class="row">
        <div class="col-sm-12" id="header">
            <h1>
                Welcome to the Winter Store App! 
            </h1>
        </div>
    </div>
    <div class="row" >
        <div class="col-sm-12" id="para1">
           <p>
               @*  "<a href='/movies/edit/" + movie.id + "'>" + movie.name + "</a>"; *@
               Select your @Html.ActionLink("Equipment", "Index", "Equipment") here.
     </p>
            <p>Would you like to go:</p>

           <table id="HomePageTable">
               <tr>
                   <th>SNOWBOARDING?</th> <th>SKIING?</th>
               </tr>
               <tr>
                   <th>ADULT SECTION</th> <th>JUNIOR SECTION</th> <th>UNIVERSAL EQUIPMENT</th>
               </tr>
               <tr>
                   <th>OUR STORE</th>
               </tr>



           </table>   
           
        </div>
    </div>
        <div class="row">
            <div class="col-sm-2" id="col2"> </div>
                <div class="col-sm-8" id="carousel">

                   @* carousel start *@
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                            <li data-target="#myCarousel" data-slide-to="1"></li>
                            <li data-target="#myCarousel" data-slide-to="2"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner">
                            <div class="item active">
                                <img src="~/images/skiing.jpg" alt="Los Angeles">
                            </div>

                            <div class="item">
                                <img src="~/images/snowboarders-2089706_960_720.jpg" alt="Chicago">
                            </div>

                            <div class="item">
                                <img src="~/images/osrodek.jpg" alt="New York">
                            </div>
                        </div>

                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    
                    @* carousel end *@ 
                </div>
            <div class="col-sm-2" id="col2"></div>

               </div>
</div>
    