@{
    ViewBag.Title = "Home Page";
}

<div class="container" id="index">
    
    <div class="row">
        <div class="col-sm-12" id="header">
            <h1>
                Welcome to the Winter Store App! 
            </h1>
        </div>
    </div>
    <div class="row" >
        <div class="col-sm-6" id="para1">
           <p>
               Select your equipement here! 
               There are many options to choose from.

               Our latest products are:
           </p>
            <ul>
                <li>snowboards </li>
                <li>skiis</li>
                <li>helmets</li>

            </ul>
            <p>Don't forget to ask your cashier about bonuses!</p>
        </div>
        <div class="col-sm-4">
          
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="https://www.dogtag.com/media/1082/winter-sports-travel-insurance.jpg"  alt="Los Angeles">
                    </div>

                    <div class="item">
                        <img src="https://www.dogtag.com/media/1082/winter-sports-travel-insurance.jpg"  alt="Chicago">
                    </div>

                    <div class="item">
                        <img src="https://www.dogtag.com/media/1082/winter-sports-travel-insurance.jpg"  alt="New York">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

